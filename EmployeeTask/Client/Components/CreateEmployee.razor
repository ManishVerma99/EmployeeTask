@inject HttpClient _httpClient;

<EditForm Model="@Register" OnValidSubmit="CreateOrUpdateEmployee">
    <DataAnnotationsValidator />
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">@(string.IsNullOrEmpty(Register.Id) ? "Create" : "Update") Employee</MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem md="6">
                    <MudTextField Disabled="@(string.IsNullOrEmpty(Register.Id)?false:true)" For="@(() => Register.Username)" @bind-Value="Register.Username" Label="User Name" />
                </MudItem>
                <MudItem md="6">
                    <MudTextField For="@(() => Register.FirstName)" @bind-Value="Register.FirstName" Label="First Name" />
                </MudItem>
                <MudItem md="6">
                    <MudTextField For="@(() => Register.LastName)" @bind-Value="Register.LastName" Label="Last Name" />
                </MudItem>
                <MudItem md="6">
                    <MudTextField For="@(() => Register.Email)" InputType="InputType.Email" @bind-Value="Register.Email" Label="Email" />
                </MudItem>
                <MudItem md="6">
                    <MudTextField Disabled="@(string.IsNullOrEmpty(Register.Id)?false:true)" For="@(() => Register.Password)" @bind-Value="Register.Password" Label="Password" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Class="my-2" Variant="Variant.Filled">Cancel</MudButton>
            <MudButton Class="my-2 me-2" Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="MudBlazor.Color.Success">@(string.IsNullOrEmpty(Register.Id) ? "Create" : "Update")</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>