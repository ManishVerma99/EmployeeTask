@page "/login"
@inject HttpClient _httpClient;
@inject AuthenticationStateProvider _authProvider;
@layout BlankLayout

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <MudImage Src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 Alt="login form" Class="img-fluid" Style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <EditForm Model="loginModel" OnValidSubmit="OnLogin">
                                    <DataAnnotationsValidator />
                                    <MudText Class="fw-normal mb-3 pb-3" Style="letter-spacing: 1px; font-size:40px;">Login your account</MudText>
                                    <div class="form-outline mb-4">
                                        <MudTextField For="@(() => loginModel.Username)" @bind-Value="loginModel.Username" Label="Username" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <MudTextField InputType="InputType.Password" For="@(() => loginModel.Password)" @bind-Value="loginModel.Password" Label="Password" />
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <MudButton Class="btn-block" Color="Color.Success" Variant="Variant.Filled" ButtonType="ButtonType.Submit">Login</MudButton>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>